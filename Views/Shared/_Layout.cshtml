<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DisasterManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DisasterManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand/Home Link - Different based on role -->
                @if (User.IsInRole("Admin"))
                {
                    <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">DisasterManagement - Admin</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DisasterManagement</a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Navigation Menu - Different for Admin vs User -->
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <!-- ADMIN NAVIGATION -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="IncidentReports" asp-action="Index">Manage Incidents</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Donations" asp-action="Manage">Manage Donations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Volunteers" asp-action="Manage">Manage Volunteers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index">User Management</a>
                            </li>
                        }
                        else
                        {
                            <!-- USER NAVIGATION -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Donations" asp-action="Index">Donations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="VolunteerTasks" asp-action="Index">Volunteer Tasks</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="IncidentReports" asp-action="Index">Incident Reports</a>
                            </li>
                        }

                        <!-- Common navigation items for all roles -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- User Info & Auth Section -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Role Badge -->
                            <li class="nav-item">
                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="badge bg-danger me-2 mt-2">Administrator</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary me-2 mt-2">User</span>
                                }
                            </li>

                            <!-- User Greeting -->
                            <li class="nav-item">
                                <span class="nav-link text-dark">Hello, @User.Identity.Name!</span>
                            </li>

                            <!-- Logout -->
                            <li class="nav-item">
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark" style="display:inline;padding:0;border:none;background:none;">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Login/Register for non-authenticated users -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Area" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Area" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <!-- Role-based alerts -->
        @if (User.IsInRole("Admin") && !Context.Request.Path.StartsWithSegments("/Admin"))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Admin Mode:</strong> You are viewing regular user pages.
                <a href="/Admin/Home/Index" class="alert-link">Go to Admin Dashboard</a>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DisasterManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

            <!-- Show current role in footer -->
            @if (User.Identity.IsAuthenticated)
            {
                <span class="float-end">
                    @if (User.IsInRole("Admin"))
                    {
                        <small class="text-muted">Admin Mode</small>
                    }
                    else
                    {
                        <small class="text-muted">User Mode</small>
                    }
                </span>
            }
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>