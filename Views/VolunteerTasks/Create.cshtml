@model DisasterManagement.Models.VolunteerTask

@{
    ViewData["Title"] = "Create Volunteer Task";
}

<h1>Create Volunteer Task</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Title -->
            <div class="form-group">
                <label asp-for="Title" class="control-label">Task Title</label>
                <input asp-for="Title" class="form-control" placeholder="e.g., Distribute Supplies" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label">Task Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the task responsibilities"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Location -->
            <div class="form-group">
                <label asp-for="Location" class="control-label">Location</label>
                <input asp-for="Location" class="form-control" placeholder="e.g., Community Center, Zone 5" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <!-- Start and End Time -->
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Start Time</label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label">End Time</label>
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <!-- Assign Volunteer Profile -->
            <div class="form-group">
                <label class="control-label">Assign Volunteers</label>
                <div class="btn-group-vertical" data-toggle="buttons">
                    @foreach (var v in ViewBag.Volunteers as List<DisasterManagement.Models.VolunteerProfile>)
                    {
                        <label class="btn btn-outline-primary m-1">
                            <input type="checkbox" name="SelectedVolunteerIds" value="@v.Id" autocomplete="off">
                            @(v.User?.UserName ?? "Unassigned User") (@v.Skills)
                        </label>
                    }
                </div>
                <span asp-validation-for="VolunteerProfileId" class="text-danger"></span>
            </div>



            <!-- Status -->
            <div class="form-group">
                <label asp-for="Status" class="control-label">Task Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="Open">Open</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="form-group mt-3">
                <input type="submit" value="Create Task" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
