@model DisasterManagement.Models.Donation

@{
    ViewData["Title"] = "Delete Donation";
}

<h2>Delete Donation</h2>

<h3>Are you sure you want to delete this donation?</h3>

<div>
    <strong>Donor:</strong> @Model.Donor?.UserName ?? "Anonymous"<br />
    <strong>Date:</strong> @Model.CreatedOn.ToString("yyyy-MM-dd HH:mm")
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="DonationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
